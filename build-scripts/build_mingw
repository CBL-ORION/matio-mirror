m=`uname -m`
case $m in
    x86_64)
        ARCH=64
        LIBDIR_SUFFIX=64
        ;;
    *)
        ARCH=32
        LIBDIR_SUFFIX=
        ;;
esac

PREFIX=/home/chulbert/matio_v1.5.0
thisdir=`dirname $0`

CC=gcc

case $CC in
  *pgcc*)
    CFLAGS="-c9x -O2 -Kieee"
    ;;
  *gcc*)
    CFLAGS="-std=c99 -O2 -fno-fast-math"
    ;;
esac

DEFAULT_OPTS="--prefix=$PREFIX --exec-prefix=$PREFIX --with-pic"
LIBDIR_SUFFIX="--with-libdir-suffix=$LIBDIR_SUFFIX"

DEBUG="--enable-debug"
ZLIB_OPTS="--with-zlib=$PREFIX"
ZLIB_OPTS="--with-zlib"
HDF5_OPTS="--with-hdf5=/opt/hdf5"
DOCS_OPTS="--enable-docs=no"
TEST_OPTS="--enable-test=no"
FORTRAN="--enable-fortran=no"

$thisdir/../configure CC=$CC CFLAGS="$CFLAGS" \
  $DEFAULT_OPTS $LIBDIR_SUFFIX $DEBUG $FORTRAN $ZLIB_OPTS $HDF5_OPTS \
  $DOCS_OPTS $TEST_OPTS

if test $? = 0
then
    make > matio.build 2>&1
fi

if test $? = 0
then
    make install > matio.instl 2>&1
fi
